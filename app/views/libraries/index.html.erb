<p id="notice"><%= notice %></p>

<h3>Libraries</h3>
<table class="w3-table-all">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Max days blocking</th>
      <th>Overdue fines</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @libraries.each do |library| %>
      <tr>
        <td><%= library.name %></td>
        <td><%= library.location %></td>
        <td><%= library.max_days_blocking %></td>
        <td><%= library.overdue_fines %></td>
        <td><%= link_to 'Show', library %></td>
        <% if current_admin or current_librarian %>
        <td><%= link_to 'Edit', edit_library_path(library) %></td>
        <% end %>
        <% if current_admin %>
        <td><%= link_to 'Destroy', library, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_admin %>
<%= button_to 'New Library', new_library_path , method: :get %>
<% end %>
