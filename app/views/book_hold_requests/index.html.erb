<p id="notice"><%= notice %></p>

<br/><h3>Book Hold Requests</h3><hr>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Book</th>
      <th>Library</th>
      <th>Reason</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @book_hold_requests.each do |book_hold_request| %>
      <tr>
        <td><%= book_hold_request.student_id %></td>
        <td><%= book_hold_request.book_id %></td>
        <td><%= book_hold_request.library_id %></td>
        <td><%= book_hold_request.reason %></td>
        <td><%= link_to 'Show', book_hold_request %></td>
        <td><%= link_to 'Approve', approve_book_hold_request_path(book_hold_request) %></td>
        <td><%= link_to 'Destroy', book_hold_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

